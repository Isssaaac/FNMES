<body>
    <div class="panel animated fadeIn">
        <div class="panel-body">
            <div class="layui-inline" style="margin-bottom: 10px;">
                <select lay-ignore name="lineId" class="select2" id="lineId"  style="width: 250px;height: 30px;" lay-verify="required"></select>
                <br></br>

                <div class="layui-inline" id="ID-laydate-range">
                    <div class="layui-input-inline">
                        <input type="text" autocomplete="off" id="ID-laydate-start-date" style="width: 200px;height: 30px;" class="layui-input" placeholder="开始日期">
                    </div>
                    <div class="layui-input-inline">
                        <input type="text" autocomplete="off" id="ID-laydate-end-date" style="width: 200px;height: 30px;" class="layui-input" placeholder="结束日期">
                    </div>
                </div>

                <div class="layui-input-inline" style="width: 200px;">
                    <input type="text" id="productCode" autocomplete="off" class="layui-input" placeholder="内控码/工位">
                </div>
                <div class="layui-input-inline" style="width: 200px;">
                    <input type="text" id="order" autocomplete="off" class="layui-input" placeholder="工单">
                </div>

                <div class="layui-btn-group"> 
                    <button id="conditionSearch" class="layui-btn layui-btn-primary layui-btn-small">精准查询</button>
                    <button onclick="export_condition_btn()" class="layui-btn layui-btn-primary layui-btn-small">精准导出</button>
                    <button onclick="export_outstation_btn()" class="layui-btn layui-btn-primary layui-btn-small">仅导出过站</button>
                </div>
            </div>


            <div id="toolbar" class="FNMES-table-toolbar">
                <div class="layui-btn-group" id="queryDate">
                    <button value="1" class="layui-btn layui-btn-primary layui-btn-small">今天</button>
                    <button value="2" class="layui-btn layui-btn-primary layui-btn-small active">近7天</button>
                    <button value="3" class="layui-btn layui-btn-primary layui-btn-small">近1个月</button>
                    <button value="4" class="layui-btn layui-btn-primary layui-btn-small">近3个月</button>
                </div>
                <div class="layui-btn-group">
                    <button  onclick="export_btn()" class="layui-btn layui-btn-primary layui-btn-small">导出数据</button>
                </div>
                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small" style="line-height:20px">
                        <i class="layui-icon">&#xe615;</i>
                </button>
                <div class="toolbar-search-input">
                    <input type="text" id="keyWord" placeholder="key" autocomplete="off" class="layui-input" style="height:39px">
                </div>
            </div>
            <table id="gridList" class="layui-form layui-table table-hover FNMES-table" lay-skin="line">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" lay-skin="primary">
                        </th>
                        <th>内控码</th>
                        <th>工位</th>
                        <th>工单号</th>
                        <th>状态</th>
                        <th>不良代码</th>
                        <th>不良描述</th>
                        <th>过站时间</th>
                        <th>进站时间</th>
                        <th>AGV码</th>
                    </tr>
                </thead>
                <!--内容容器-->
                <tbody id="content"></tbody>
            </table>
            <div id="paged"></div>
        </div>
    </div>
