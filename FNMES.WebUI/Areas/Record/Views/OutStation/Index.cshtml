            .then(blob => {
                if (typeof blob == "string") {
                    $.layerMsg(blob, "warning");
                    return
                }

                // 创建一个临时链接以下载文件
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement("a");
                a.href = url;
