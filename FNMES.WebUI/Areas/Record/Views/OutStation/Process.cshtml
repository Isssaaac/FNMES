<!--内容模板-->
<script id="contentTpl" type="text/html">
    {{#  layui.each(d.list, function(index, item){ }}
    <tr>
        <td>
            <input type="checkbox" lay-skin="primary" value="{{item.Id}}">
        </td>
        <td>{{item.PartNumber}}</td>
        <td>{{item.PartDescription}}</td>
        <td>{{item.PartBarcode}}</td>
        <td>{{item.TraceType}}</td>
        <td>{{item.UsageQty}}</td>
        <td>{{item.Uom}}</td>
    </tr>
     {{#  }); }}
       {{# if(d.list.length<=0) { }}
          <tr style="color: red">
              <td colspan="8">查无数据。</td>
          </tr>
      {{# } }}

</script>


<script type="text/javascript">
    var paging;
    layui.config({ base: parent._baseUrl }).use(['paging', 'form'], function () {
        var form = layui.form;
        paging = layui.paging();
        var configId = $.getQueryString("configId");
        var productCode = $.getQueryString("productCode");
        var stationCode = $.getQueryString("stationCode");
        $('#keyWord').bindEnterEvent(initGrid(configId, productCode, stationCode));
        initGrid(configId, productCode, stationCode);

    });
    function initGrid(configId, productCode, stationCode) {
        paging.init({
            url: '/record/process/index',
            elem: '#content',
            tempElem: '#contentTpl',
            checkbox: true, //是否显示复选框
            singleSelected: true, //单选
            params: {
                productCode: productCode,
                configId: configId,
                stationCode: stationCode，
                keyWord: $("#keyWord").val()
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 5,
            },
            success: function () {

            },
            fail: function (msg) {
                top.layer.msg(msg);
            }
        });
    }









</script>

