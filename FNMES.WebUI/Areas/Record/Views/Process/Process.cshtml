@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <meta charset="utf-8">
    <link rel="shortcut icon" type="image/ico" href="~/favicon.ico" />
    <link rel="bookmark" type="image/ico" href="~/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/select2/css/select2.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!--[if lt IE 9]>
        <script src="/Content/jquery/jquery-1.9.1.min.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
    <script src="~/Content/jquery/jquery.min.js"></script>
    <!--<![endif]-->
    <!--[if lt IE 9]>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/select2/js/select2.min.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
</head>
<body>
    <form id="form" class="layui-form" style="margin-top: 25px">
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label label-required">内控码</label>
                <div class="layui-input-inline">
                    <input type="hidden" name="Id" id="Id" />
                    <input type="hidden" name="ConfigId" id="ConfigId" />
                    <input type="text" name="ProductCode" id="Encode" lay-verify="required" placeholder="请输入产品型号" autocomplete="off" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label label-required">工站</label>
                <div class="layui-input-inline">
                    <input type="text" name="StationCode" lay-verify="required" placeholder="请输入名称" autocomplete="off" class="layui-input" disabled>
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">程序号</label>
                <div class="layui-input-inline" style="width: 514px;">
                    <textarea name="RecipeNo"  class="layui-textarea" disabled></textarea>
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">程序名</label>
                <div class="layui-input-inline">
                    <input type="text" name="RecipeDescription" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">版本</label>
                <div class="layui-input-inline">
                    <input type="text" name="RecipeVersion" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">最终结果</label>
                <div class="layui-input-inline">
                    <input type="text" name="TotalFlag" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">员工</label>
                <div class="layui-input-inline">
                    <input type="text" name="OperatorNo" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
        </div>
    </form>
    <table id="gridList" class="layui-form layui-table table-hover FNMES-table" lay-skin="line">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" lay-skin="primary">
                </th>
                <th>参数名称</th>
                <th>参数值</th>
                <th>检测结果</th>
                <th>时间</th>
            </tr>
        </thead>
        <!--内容容器-->
        <tbody id="content"></tbody>
    </table>
    <div id="paged"></div>
    
</body>

</html>

<!--内容模板-->
<script id="contentTpl" type="text/html">
      {{#  layui.each(d.list, function(index, item){ }}
    <tr>
        <td>
            <input type="checkbox" lay-skin="primary" value="{{item.Id}}"></td>
         <td>{{item.ParamName}}</td>
         <td>{{item.ParamValue}}</td>
        <td>{{item.ItemFlag}}</td>
        <td>{{item.CreateTime}}</td>
    </tr>
      {{#  }); }}
       {{# if(d.list.length<=0) { }}
          <tr style="color: red">
              <td colspan="8">查无数据。</td>
          </tr>
      {{# } }}
</script>

<script>
    layui.use(['element', 'form', 'laydate'], function () {
        var form = layui.form;
        var element = layui.element;
        var laydate = layui.laydate;
        laydate.render({

        });
        var productCode = $.getQueryString("productCode");
        var stationCode = $.getQueryString("stationCode");
        var configId = $.getQueryString("configId");
        if (primaryKey) {
            $.ajax({
                url: "/record/process/index",
                data: {
                    productCode: productCode,
                    stationCode: stationCode,
                    configId: configId
                },
                type: "post",
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form").formSerialize(data);
                }
            });
        }
        $("#ConfigId").val(configId);
        form.render();
        initGrid();
    });

    function initGrid() {
        if ($("#Id").val() == "0") {
            return
        };
        paging.init({
            url: '/record/processdata/index',
            elem: '#content',
            tempElem: '#contentTpl',
            singleSelected: true, //单选
            params: {
                pid: $("#id").val(),
                configId: $("#lineId").val(),
                index: $('#queryDate').find('button.active').val(),
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 10,
            },
            success: function () {

            }
        });
    }
</script>