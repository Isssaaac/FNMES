<script type="text/javascript">
    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer',"table"], function () {
        var layer = parent.layer || layui.layer;
        var form = layui.form;
        var table = layui.table;
        paging = layui.paging();
        $("#lineId").bindSelect({
            type: "POST",
            url: "/system/line/getListTreeSelect",
            title: '请选择线体'
        });
        $("#toolbar").authorizeButton();
        $('#btnSearch').click(initGrid);
        $('#keyWord').bindEnterEvent(initGrid);
       // initGrid();
        initTree();
        

        

    });
    //$("#lineId").bindChangeEvent(initGrid);
    $("#lineId").on("select2:select", function (e) {
    // 处理选择事件
        if ($("#lineId").val() == "0") {
            return
        };
        initGrid();
    });

    $('#queryDate').find('button').click(function (i, v) {
        $(this).addClass('active');
        $(this).siblings('button').removeClass('active');
        initGrid();
    });

    function initTree() {
        var setting = {
            data: {
                simpleData: {
                    enable: true
                }
            },
            check: {
                enable: false,
                chkStyle: "checkbox",
                chkDisabledInherit: false
            },
            // async: {
            //     enable: true,
            //     url: "/record/general/getListTree",
            //     dataType: "text",
            //     autoParam: ["id", "name"]
            // }, 
            callback: {
                // onAsyncSuccess: function (event, treeId, treeNode, msg) {
                //     var node = zTreeObj.getNodesByFilter(function (node) {
                //         return node.level == 1
                //     }, true);
                //     zTreeObj.selectNode(node);
                //     zTreeObj.setting.callback.onClick(event, zTreeObj.setting.treeId, node);
                // },
                onClick: function (event, treeId, treeNode) {
                    initGrid();
                }
            }
        };
        var zNodes = [
            { id: 1, pId: 0, name: "数据列表", open: true },
            { id: 11, pId: 1, name: "历史绑定纪录" ,checked: true},
            { id: 12, pId: 1, name: "工厂接口纪录" },
            { id: 13, pId: 1, name: "设备报警纪录" },
            { id: 14, pId: 1, name: "设备状态纪录" },
            { id: 15, pId: 1, name: "设备停机纪录" },
            { id: 16, pId: 1, name: "工单上线纪录" },
            { id: 17, pId: 1, name: "工单下线纪录" },
        ];
        var zTreeObj = $.fn.zTree.init($("#treeItem"), setting, zNodes);
        // 通过节点 ID 选中节点
        var node = zTreeObj.getNodeByParam("id", 11, null); // 假设要选中 ID 为 11 的节点
        zTreeObj.selectNode(node);
    };
    function initGrid() {
        if ($("#lineId").val() == "0") {
            return
        };
        var treeObj = $.fn.zTree.getZTreeObj("treeItem");
        var selectedNode = treeObj.getSelectedNodes()[0];
        if (selectedNode.pId == 0) {
            return;
        }
        var selectUrl = '/record/general/bindhistory';
        if (selectedNode.id == "11") {
            selectUrl = '/record/general/bindhistory';
        } else if (selectedNode.id == "12") {
            selectUrl = '/record/general/api';
        }else if (selectedNode.id == "13") {
            selectUrl = '/record/general/error';
        }else if (selectedNode.id == "14") {
            selectUrl = '/record/general/status';
        }else if (selectedNode.id == "15") {
            selectUrl = '/record/general/stop';
        }else if (selectedNode.id == "16") {
            selectUrl = '/record/general/start';
        } else if (selectedNode.id == "17") {
            selectUrl = '/record/general/pack';
        };
        layui.table.render({
            elem: '#gridList',
            url: selectUrl, // 替换成实际的接口地址
            where: {
                keyWord: $("#keyWord").val(),
                configId: $("#lineId").val(),
                index: $('#queryDate').find('button.active').val()
            },
            cols: [getCols(selectedNode.id)],
            parseData: function (res) { 
                return {
                    "code": res.code,
                    "msg": res.msg,
                    "count": res.count,
                    "data": res.list,
                };
            },
            page: true, // 开启表格默认分页
            limit: 10, // 每页显示条数
            limits:[5,10]
        });
    };



    function getCols(condition) {
        if (condition === 11) {
            return[
                // Define your columns for condition 1
                { field: 'PalletNo', title: '托盘' },
                { field: 'ProductCode', title: '内控码' },
                { field: 'TaskOrderNumber', title: '工单' },
                { field: 'ProductPartNo', title: '产品名称' },
                { field: 'ConfigId', title: '所属线体' },
                { field: 'CurrentStation', title: '最近工站' },
                { field: 'Diverter', title: '分流器条码' },
                { field: 'ReessNo', title: '国标码' },
                { field: 'GlueTime', title: '中段涂胶时间' },
                { field: 'Status', title: '状态', templet: '#statusTpl' },
                { field: 'RepairFlag', title: '返修', templet: '#selectTpl' },
                { field: 'RepairStations', title: '返修站' },
             ];
        } else if (condition === 12) {
            return [
