                { field: 'EquipmentID', title: '设备' },
                { field: 'BigStationCode', title: '大工站' },
                { field: 'SmallStationCode', title: '小工站' },
                { field: 'EquipmentStatus', title: '状态' },
                { field: 'StatusCode', title: '状态码' },
                { field: 'StatusDescription', title: '状态描述' },
                { field: 'CreateTime', title: '创建时间' },
            ];
        } else if (condition === 15) {
            return [
                // Define your columns for condition 1
                { field: 'EquipmentID', title: '设备' },
                { field: 'BigStationCode', title: '大工站' },
                { field: 'SmallStationCode', title: '小工站' },
                { field: 'OperatorNo', title: '员工号' },
                { field: 'StopCode', title: '停机代码' },
                { field: 'StopDesc', title: '停机描述' },
                { field: 'StopDurationTime', title: '停机时长ms' },
                { field: 'CreateTime', title: '创建时间' },
            ];
        } else if (condition === 16) {
            return [
                // Define your columns for condition 1
                { field: 'TaskOrderNumber', title: '工单' },
                { field: 'ProductCode', title: '内控码' },
                { field: 'PackNo', title: '托盘码' },
                { field: 'CreateTime', title: '创建时间' },
            ];
        } else if (condition === 17) {
            return [
                // Define your columns for condition 1
                { field: 'TaskOrderNumber', title: '工单' },
                { field: 'ProductCode', title: '内控码' },
                { field: 'ReessNo', title: 'REESS码' },
                { field: 'CreateTime', title: '创建时间' },
            ];
        }
        if (condition) {
            return [
                // Define your columns for condition 1
                { field: 'field1', title: 'Column 1' },
                { field: 'field2', title: 'Column 2' },
                // ... other columns
            ];
        } else {
            return [
                // Define your columns for condition 2
                { field: 'fieldA', title: 'Column A' },
                { field: 'fieldB', title: 'Column B' },
                // ... other columns
            ];
        }
    }
    function initGridList(condition) {
        // 获取表格的 thead
        var thead = document.getElementById('gridList').getElementsByTagName('thead')[0];
        var headerRow = thead.getElementsByTagName('tr')[0]; // 获取表头的第一行

        // 清空现有的表头
        headerRow.innerHTML = '';

        // 创建复选框
        var checkboxTh = document.createElement('th');
        var checkbox = document.createElement('input');
        checkbox.type = 'checkbox';
        checkbox.className = 'checkboxClass'; // 添加类名
        checkbox.setAttribute('lay-skin', 'primary');
        checkboxTh.appendChild(checkbox);
        headerRow.appendChild(checkboxTh);

        var headers = ["托盘", "内控码", "工单", "产品名称", "所属线体", "状态", "返修", "返修站"];
        // 根据不同条件生成或修改 th 的内容
        if (condition === 11) {
            headers = ["托盘", "内控码", "工单", "产品名称", "所属线体", "状态", "返修", "返修站"];
        } else if (condition === 12) {
            var headers = ["URL", "请求体", "响应内容", "用时", "创建时间"];
        } else if (condition === 13) {
            var headers = ["设备", "大工站", "状态", "报警代码", "报警描述", "创建时间"];
        } else if (condition === 14) {
            var headers = ["设备", "大工站", "状态", "状态码", "状态描述", "创建时间"];
        } else if (condition === 15) {
            var headers = ["设备", "大工站", "员工号", "停机代码", "停机描述", "停机时长ms","创建时间"];
        } else if (condition === 16) {
            var headers = ["工单", "内控码", "托盘码", "创建时间"];
        } else if (condition === 17) {
            var headers = ["工单", "内控码", "REESS码", "创建时间"];
        }
            // 创建其余表头
        headers.forEach(function (header) {
            var th = document.createElement('th');
            th.appendChild(document.createTextNode(header));
            th.style.width = '150px'; // 设置宽度为150像素，您可以根据需要调整
            headerRow.appendChild(th);
        });
    }
    </script>
