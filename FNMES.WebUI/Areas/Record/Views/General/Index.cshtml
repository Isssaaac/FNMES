                { field: 'EquipmentID', title: '设备' },
                { field: 'StationCode', title: '大工站' },
                { field: 'SmallStationCode', title: '小工站' },
                { field: 'AlarmStatus', title: '状态', templet: '#statusTpl1' },
                { field: 'AlarmCode', title: '报警代码' },
                { field: 'AlarmDesc', title: '报警描述' },
