@using Microsoft.Extensions.Localization
@using FNMES.WebUI;

@inject IStringLocalizer<SharedResource> SharedLocalizer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <meta charset="utf-8">
    <link rel="shortcut icon" type="image/ico" href="~/favicon.ico" />
    <link rel="bookmark" type="image/ico" href="~/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/select2/css/select2.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!--[if lt IE 9]>
        <script src="/Content/jquery/jquery-1.9.1.min.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
    <script src="~/Content/jquery/jquery.min.js"></script>
    <!--<![endif]-->
    <!--[if lt IE 9]>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/select2/js/select2.min.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
</head>
<body>
    <form id="form" class="layui-form" style="margin-top: 25px">
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["Account"]</label>
                <div class="layui-input-inline">
                    <input type="hidden" name="Id" disabled />
                    <input type="text" name="UserNo" id="Account" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["InitialPassword"]</label>
                <div class="layui-input-inline">
                    <input type="password" name="Password" id="Password" autocomplete="off" class="layui-input" disabled>
                </div>
            </div>

        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["Name"]</label>
                <div class="layui-input-inline">
                    <input type="text" name="Name" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>

        </div>

        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["RoleAttributes"]</label>
                <div class="layui-input-inline">
                    <select lay-ignore name="RoleId" class="select2" id="RoleId" multiple="multiple" style="width: 514px;" disabled>
                    </select>
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["SortCode"]</label>
                <div class="layui-input-inline">
                    <input type="number" name="SortCode" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["Enabled"]</label>
                <div class="layui-input-inline">
                    <input type="radio" name="EnableFlag" value="Y" title=@SharedLocalizer["Yes"] checked disabled />
                    <input type="radio" name="EnableFlag" value="N" title=@SharedLocalizer["No"] disabled />
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["PersonalSignature"]</label>
                <div class="layui-input-inline" style="width: 514px;">
                    <textarea name="Description" class="layui-textarea" disabled placeholder=@SharedLocalizer["This student is very lazy and said without an autograph"]></textarea>
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["Creator"]</label>
                <div class="layui-input-inline">
                    <input type="text" name="CreateUserName" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["CreateTime"]</label>
                <div class="layui-input-inline">
                    <input type="text" name="CreateTime" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["Reviser"]</label>
                <div class="layui-input-inline">
                    <input type="text" name="ModifyUserName" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">@SharedLocalizer["ModificationTime"]</label>
                <div class="layui-input-inline">
                    <input type="text" name="ModifyTime" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
        </div>
    </form>
    <script>
        layui.use(['element', 'form', 'laydate'], function () {
            var form = layui.form;
            var element = layui.element;
            var laydate = layui.laydate;
            laydate.render({
                
            });


            $("#RoleId").bindSelect({
                type: "POST",
                url: "/system/role/getListTreeSelect",
                title: '@Html.Raw(@SharedLocalizer["Please select a role"])'
            });

            var primaryKey = $.getQueryString("primaryKey");
            if (primaryKey) {
                $.ajax({
                    url: "/system/user/getForm",
                    data: { primaryKey: primaryKey },
                    type: "post",
                    dataType: "json",
                    async: false,
                    success: function (data) {
                        $("#form").formSerialize(data);
                    }
                });
            }

            form.render();

        });
    </script>
</body>
</html>