<!--内容模板-->
<script id="contentTpl" type="text/html">
    {{#  layui.each(d.list, function(index, item){ }}
    <tr>
        <td>
            <input type="checkbox" lay-skin="primary" value="{{item.Id}}">
        </td>
        <td>
            {{# if(item.IP!=null){ }}
            {{item.IP}}
            {{# } }}
        </td>
        <td>
            {{# if(item.EnCode!=null){ }}
            {{item.EnCode}}
            {{# } }}
        </td>
        <td>{{item.Name}}</td>
        <td>{{item.BigProcedure}}</td>
        <td>{{item.UnitProcedure}}</td>
        <td>{{item.SortCode}}</td>
        <td>
            {{# if(item.IsEnabled==true){ }}  <span class="label label-success label-sm">启用</span>
            {{# }else{ }}  <span class="label label-dark label-sm">禁用</span>
            {{# } }}
        </td>
    </tr>
    {{#  }); }}
     {{# if(d.list.length<=0) { }}
        <tr style="color: red">
            <td colspan="6">查无数据。</td>
        </tr>
    {{# } }}
</script>

<script type="text/javascript">
    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form'], function () {
        var form = layui.form;
        paging = layui.paging();

        var setting = {
            data: {
                simpleData: {
                    enable: true




                }
            },
            check: {
                enable: false,
                chkStyle: "checkbox",
                chkDisabledInherit: false
            },
            async: {
                enable: true,
                url: "/system/line/getListTree",
                dataType: "text",
                autoParam: ["id", "name"]
            }, callback: {
                onAsyncSuccess: function (event, treeId, treeNode, msg) {
                    var node = zTreeObj.getNodesByFilter(function (node) {
                        return node.level == 1
                    }, true);
                    zTreeObj.selectNode(node);
                    zTreeObj.setting.callback.onClick(event, zTreeObj.setting.treeId, node);
                },
                onClick: function (event, treeId, treeNode) {
                    initGrid();
                }
            }
        };

        var zTreeObj = $.fn.zTree.init($("#treeItem"), setting);

        $("#toolbar").authorizeButton();
        $('#btnSearch').click(initGrid);
        $('#keyWord').bindEnterEvent(initGrid);
    });

    function initGrid() {

        var treeObj = $.fn.zTree.getZTreeObj("treeItem");
        var selectedNode = treeObj.getSelectedNodes()[0];
        if (selectedNode.level == 0) {
            return;
        }

        paging.init({
            url: '/system/equipment/index',
            elem: '#content',
            tempElem: '#contentTpl',
            params: {
                keyWord: $("#keyWord").val(),
                lineId: selectedNode.id
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 10,
            },
            success: function () {

            },
            fail: function (msg) {
                top.layer.msg(msg);
            }
        });
    }

    function btn_manage() {
        $.layerOpen({
            id: "manage",
            title: "线体管理",
            width: "950px",
            height: "550px",
            content: "/system/line/index",
            btn: null
        });
    }

    function btn_add() {
        var node = $.fn.zTree.getZTreeObj("treeItem").getSelectedNodes()[0];
        $.layerOpen({
            id: "add",
            title: "新增设备",
            width: "670px",
            height: "450px",
            content: "/system/equipment/form?lineId=" + node.id,
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_edit() {
        var node = $.fn.zTree.getZTreeObj("treeItem").getSelectedNodes()[0];
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录修改。", "warning");
            return;
        }
        $.layerOpen({
            id: "edit",
            title: "修改设备",
            width: "670px",
            height: "450px",
            content: "/system/equipment/form?primaryKey=" + ids[0],
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }
    function btn_delete() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length < 1) {
            $.layerMsg("请勾选需要删除的选项。", "warning");
            return;
        }
        $.layerConfirm({
            content: "您已选中" + ids.length + "条数据, 确定删除吗？",
            callback: function () {
                $.formSubmit({
                    url: '/system/equipment/delete',
                    data: { primaryKey: ids[0] },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }
    function btn_detail() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        $.layerOpen({
            id: "detail",
            title: "设备详情",
            width: "670px",
            height: "510px",
            content: "/system/equipment/detail?primaryKey=" + ids[0],
            btn: null
        });
    }

</script>

