@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>添加PLC</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/select2/css/select2.css" rel="stylesheet" />
    <!--[if lt IE 9]>
        <script src="/Content/jquery/jquery-1.9.1.min.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
    <script src="~/Content/jquery/jquery-3.6.0.min.js"></script>
    <!--<![endif]-->
    <!--[if lt IE 9]>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/select2/js/select2.min.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
</head>




<body>
    <form id="form" class="layui-form" style="margin-top: 25px">
        <div class="layui-form-item">
            <div class="layui-inline">
                <input type="hidden" name="Id" id="Id" />
                <input type="hidden" name="ConfigId" id="ConfigId" />
                <input type="hidden" name="RecipeItemId" id="RecipeItemId" />
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label label-required">参数编码</label>
                <div class="layui-input-inline">
                    <input type="text" name="ParamCode" id="ParamCode" lay-verify="required" placeholder="参数编码" autocomplete="off" class="layui-input">
                </div>

                <label class="layui-form-label">参数名称</label>
                <div class="layui-input-inline">
                    <input type="text" name="ParamName" id="ParamName" lay-verify="required" placeholder="参数名称" autocomplete="off" class="layui-input">
                </div>
            </div>

            <div class="layui-inline">
                @*<div class="layui-inline">
                    <label class="layui-form-label ">小工位</label>
                    <div class="layui-input-inline">
                        <select class="select2 layui-input-inline" lay-ignore name="SmallStationCode" id="SmallStationCode"></select>
                    </div>
                </div>*@
                <label class="layui-form-label">工步编码</label>
                <div class="layui-input-inline">
                    <input type="text" name="StepNo" id="StepNo"  placeholder="工步编码" autocomplete="off" class="layui-input">
                </div>
                <label class="layui-form-label">工步名</label>
                <div class="layui-input-inline">
                    <input type="text" name="StepName" id="StepName" placeholder="工步名" autocomplete="off" class="layui-input">
                </div>
            </div>

            <div class="layui-inline">
                <label class="layui-form-label">分类</label>
                <div class="layui-input-inline">
                    <select name="ParamClassification" id="ParamClassification" >
                        <option value="">请选择</option>
                        <option value="产品参数">产品参数</option>
                        <option value="过程参数" selected>过程参数</option>
                        <option value="设备预设参数">设备预设参数</option>
                    </select>
                </div>

                <label class="layui-form-label">判定类型</label>
                <div class="layui-input-inline">
                    <select name="DecisionType" id="DecisionType" value="upperAndLower">
                        <option value="">请选择</option>
                        <option value="dataCollect">数据收集</option>
                        <option value="equipJudge">设备判定</option>
                        <option value="upperAndLower" selected>取上下限判定</option>
                        <option value="upper">取上限判定</option>
                        <option value="lower">取下限判定</option>
                    </select>
                </div>
            </div>

            <div class="layui-inline">
                <label class="layui-form-label">参数类型</label>
                <div class="layui-input-inline">
                    <select name="ParamType" id="ParamType">
                        <option value="">请选择</option>
                        <option value="定性">定性</option>
                        <option value="定量" selected>定量</option>
                    </select>
                </div>
            </div>

            <div class="layui-inline">
                <label class="layui-form-label">标准值</label>
                <div class="layui-input-inline">
                    <input type="number" name="StandValue" id="StandValue" placeholder="标准值" autocomplete="off" class="layui-input">
                </div>

                <label class="layui-form-label">设定值</label>
                <div class="layui-input-inline">
                    <input type="text" name="SetValue" id="SetValue" placeholder="设定值" autocomplete="off" class="layui-input">
                </div>
            </div>

            <div class="layui-inline">
                <label class="layui-form-label">上限</label>
                <div class="layui-input-inline">
                    <input type="number" name="MaxValue" id="MaxValue" placeholder="上限" autocomplete="off" class="layui-input">
                </div>

                <label class="layui-form-label">下限</label>
                <div class="layui-input-inline">
                    <input type="number" name="MinValue" id="MinValue" placeholder="下限" autocomplete="off" class="layui-input">
                </div>
            </div>

            <div class="layui-inline">
                @*<label class="layui-form-label">工厂校验</label>
                <div class="layui-input-inline">
                    <input type="text" name="IsDoubleCheck" id="IsDoubleCheck" placeholder="工厂校验" autocomplete="off" class="layui-input">
                </div>*@

                <label class="layui-form-label">单位</label>
                <div class="layui-input-inline">
                    <input type="text" name="UnitOfMeasure" id="UnitOfMeasure" placeholder="单位" autocomplete="off" class="layui-input">
                </div>
                <label class="layui-form-label">NG代码</label>
                <div class="layui-input-inline">
                    <input type="text" name="NgCode" id="NgCode" placeholder="NG代码" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">描述</label>
                <div class="layui-input-inline" style="width: 514px">
                    <textarea name="ProcessDescription" placeholder="请输入备注" class="layui-textarea"></textarea>
                </div>
            </div>
        </div>
        

        <div class="layui-form-item" style="display: none">
            <div class="layui-input-block">
                <button id="btnSubmit" class="layui-btn" lay-submit lay-filter="add">提交</button>
            </div>
        </div>
    </form>

    <script src="~/Content/jquery/jquery.md5.js"></script>
    <script>
        layui.use(['element', 'form', 'laydate', 'layer'], function () {
            var form = layui.form;
            var element = layui.element;
            
            form.render();
            configId = $.getQueryString("configId");
            $("#SmallStationCode").bindSelect({
                type: "POST",
                url: "/param/unitProcedure/getListTreeUnSelect?configId=" + configId
            });

            $('#StepNo').on('change', function (othis) {
                $.ajax({
                    url: "/param/recipe/getStepName",
                    data: {
                        configId: $.getQueryString("configId"),
                        recipeItemId: $.getQueryString("primaryKey"),
                        StepNo: this.value
                    },
                    type: "post",
                    dataType: "text",
                    async: false,
                    success: function (data) {
                        $("#StepName").val(data);
                    }
                });
            });

            $("#RecipeItemId").val($.getQueryString("primaryKey"));
            $("#ConfigId").val($.getQueryString("configId"));
            form.on('submit(add)', function (form) {
                $.formSubmit({
                    url: "/param/recipe/paramadd",
                    data: form.field
                });
            });
        });
    </script>
</body>
</html>


