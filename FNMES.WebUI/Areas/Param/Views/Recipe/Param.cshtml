<script type="text/javascript">
    var paging;
    layui.config({ base: parent._baseUrl}).use(['paging', 'form'], function () {
        var form = layui.form;
        paging = layui.paging();
        var configId = $.getQueryString("configId");
        var primaryKey = $.getQueryString("primaryKey");
        initGrid(configId, primaryKey);
        
    });
    function initGrid(configId, primaryKey) {

        paging.init({
            url: '/param/recipe/param',
            elem: '#content',
            tempElem: '#contentTpl',
            params: {
                primaryKey: primaryKey,
                configId: configId
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 8,
            },
            success: function () {

            },
            fail: function (msg) {
                top.layer.msg(msg);
            }
        });
    }

    function btn_add() {
        $.layerOpen({
            id: "add",
            title: "添加参数",
            width: "800px",
            height: "600px",
            content: "/param/recipe/paramadd?ConfigId=" + $.getQueryString("configId") + "&primaryKey=" + $.getQueryString("primaryKey"),
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_modify() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        $.layerOpen({
            id: "modify",
            title: "修改参数",
            width: "800px",
            height: "600px",
            content: "/param/recipe/parammodify?primaryKey=" + ids[0] + "&configId=" + $.getQueryString("configId"),
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_delete() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        $.layerConfirm({
            content: "您已选中1条数据, 确定删除吗？",
            callback: function () {
                $.formSubmit({
                    url: '/param/recipe/paramdelete',
                    data: {
                        primaryKey: ids[0],
                        ConfigId: $.getQueryString("configId")
                    },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }
</script>

