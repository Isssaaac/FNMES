<script type="text/javascript">
    var paging;
    layui.config({ base: parent._baseUrl}).use(['paging', 'form'], function () {
        var form = layui.form;
        paging = layui.paging();
        $("#lineId").bindSelect({
            type: "POST",
            url: "/system/line/getListTreeSelect",
            title: '请选择线体'
        });
        $("#lineId").on("select2:select", function (e) {
            // 处理选择事件
            if ($("#lineId").val() == "0") {
                return
            };
            initTree();
        });
        
        $("#toolbar").authorizeButton();
        $('#btnSearch').click(initGrid);
        $('#keyWord').bindEnterEvent(initGrid);
    });

    function initTree() {
        var setting = {
            data: {
                simpleData: {
                    enable: true
                }
            },
            check: {
                enable: false,
                chkStyle: "checkbox",
                chkDisabledInherit: false
            },
            async: {
                enable: true,
                url: "/param/product/getListTree?configId=" + $("#lineId").val(),
                dataType: "text",
                autoParam: ["id", "name"]
            }, callback: {
                onAsyncSuccess: function (event, treeId, treeNode, msg) {
                    var node = zTreeObj.getNodesByFilter(function (node) {
                        return node.level == 1
                    }, true);
                    zTreeObj.selectNode(node);
                    zTreeObj.setting.callback.onClick(event, zTreeObj.setting.treeId, node);
                },
                onClick: function (event, treeId, treeNode) {
                    initGrid();
                }
            }
        };
        var zTreeObj = $.fn.zTree.init($("#treeItem"), setting);
    }

    function initGrid() {
        if ($("#lineId").val() == "0") {
            return;
        };
        var treeObj = $.fn.zTree.getZTreeObj("treeItem");
        var selectedNode = treeObj.getSelectedNodes()[0];
        if (selectedNode.level == 0) {
            return;
        }

        paging.init({
            url: '/param/recipe/index',
            elem: '#content',
            tempElem: '#contentTpl',
            params: {
                keyWord: $("#keyWord").val(),
                productId: selectedNode.id,
                configId: $("#lineId").val()
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 15,
            },
            success: function () {

            },
            fail: function (msg) {
                top.layer.msg(msg);
            }
        });
    }
 
    function btn_param() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        
        $.layerOpen({
            id: "detail",
            title: "工艺参数",
            width: "1000px",
            height: "600px",
            content: "/param/recipe/param?primaryKey=" + ids[0] + "&configId=" + $("#lineId").val(),
            btn: null
        });
    }

    function btn_part() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        $.layerOpen({
            id: "detail",
            title: "物料参数",
            width: "1000px",
            height: "600px",
            content: "/param/recipe/part?primaryKey=" + ids[0] + "&configId=" + $("#lineId").val(),
            btn: null
        });
    }

    function btn_step() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        $.layerOpen({
            id: "detail",
            title: "工步详情",
            width: "1000px",
            height: "800px",
            content: "/param/recipe/step?primaryKey=" + ids[0] + "&configId=" + $("#lineId").val(),
            btn: null
        });
    }

    function btn_esop() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        $.layerOpen({
            id: "detail",
            title: "ESOP",
            width: "1000px",
            height: "600px",
            content: "/param/recipe/esop?primaryKey=" + ids[0] + "&configId=" + $("#lineId").val(),
            btn: null
        });
    }

    function btn_import_step() {
        if ($("#lineId").val() == "0") {
            return;
        };

        var selectedNode = treeObj.getSelectedNodes()[0];
        if (selectedNode.level == 0) {
            return;
        }
        $.layerOpen({
            id: "detail",
            title: "导入参数",
            width: "450px",
            height: "250px",
            content: "/param/recipe/importstep?configId=" + $("#lineId").val() + "&productPartNo=" + selectedNode.id,
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_import_part() {
        $.layerOpen({
            id: "detail",
            title: "导入参数",
            width: "450px",
            height: "250px",
            content: "/param/recipe/importpart",
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_import_param() {
        $.layerOpen({
            id: "detail",
            title: "导入参数",
            width: "450px",
            height: "250px",
            content: "/param/recipe/importparam",
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_export_param() {
        var treeObj = $.fn.zTree.getZTreeObj("treeItem");
        var selectedNode = treeObj.getSelectedNodes()[0];
        if (selectedNode.level == 0) {
            return;
        }
        // 发送请求到后端以触发文件导出
        fetch("/param/recipe/exportparam?productId=" + selectedNode.id + "&configId=" + $("#lineId").val(), {
            method: "GET",
        }).then(response => response.blob())
            .then(blob => {
                // 创建一个临时链接以下载文件
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement("a");
                a.href = url;
                a.download = selectedNode.name + "-param.xlsx"; // 文件名
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
            });
    }

    function btn_export_step() {
        var treeObj = $.fn.zTree.getZTreeObj("treeItem");
        var selectedNode = treeObj.getSelectedNodes()[0];
        if (selectedNode.level == 0) {
            return;
        }

        // 发送请求到后端以触发文件导出
        fetch("/param/recipe/exportstep?productId=" + selectedNode.id + "&configId=" + $("#lineId").val(), {
            method: "GET",
        }).then(response => response.blob())
            .then(blob => {
                // 创建一个临时链接以下载文件
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement("a");
                a.href = url;
                a.download = selectedNode.name + "-step.xlsx"; // 文件名
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
            });
    }

    function btn_export_part() {
        var treeObj = $.fn.zTree.getZTreeObj("treeItem");
        var selectedNode = treeObj.getSelectedNodes()[0];
        if (selectedNode.level == 0) {
            return;
        }
        // 发送请求到后端以触发文件导出
        fetch("/param/recipe/exportpart?productId=" + selectedNode.id + "&configId=" + $("#lineId").val(), {
            method: "GET",
        }).then(response => response.blob())
            .then(blob => {
                // 创建一个临时链接以下载文件
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement("a");
                a.href = url;
                a.download = selectedNode.name + "-part.xlsx"; // 文件名
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
            });
    }
</script>
