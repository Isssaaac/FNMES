    <script src="~/Content/select2/js/select2.min.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
</head>
<body>
    <div class="panel animated fadeIn">
        <div class="panel-body">
            <div class="layui-inline" style="margin-bottom: 10px;">
                    <select lay-ignore name="lineId" class="select2" id="lineId"  style="width: 250px;height: 30px;" lay-verify="required"></select>
             </div>

            <div id="toolbar" class="FNMES-table-toolbar">
                <div class="layui-btn-group"> </div>
                
                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small" style="line-height:20px">
                        <i class="layui-icon">&#xe615;</i>
                </button>
                <div class="toolbar-search-input">
                    <input type="text" id="keyWord" placeholder="工站或PLC" autocomplete="off" class="layui-input" style="height:39px">
                </div>
            </div>
            <table id="gridList" class="layui-form layui-table table-hover FNMES-table" lay-skin="line">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" lay-skin="primary">
                        </th>
                        <th>大工站</th>
                        <th>设备名</th>
                        <th>偏移</th>
                        <th>状态码偏移</th>
                        <th>PLC</th>
                    </tr>
                </thead>
                <!--内容容器-->
                <tbody id="content"></tbody>
            </table>
            <div id="paged"></div>
        </div>
    </div>
</body>
</html>

<!--内容模板-->
<script id="contentTpl" type="text/html">
      {{#  layui.each(d.list, function(index, item){ }}
    <tr>
        <td>
            <input type="checkbox" lay-skin="primary" value="{{item.Id}}"></td>
        <td>{{item.BigStationCode}}</td>
        <td>{{item.EquipmentID}}</td>
        <td>{{item.Offset}}</td>
        <td>{{item.StopCodeOffset}}</td>
        <td>{{item.PlcNo}}</td>
    </tr>
      {{#  }); }}
       {{# if(d.list.length<=0) { }}
          <tr style="color: red">
              <td colspan="8">查无数据。</td>
          </tr>
      {{# } }}
</script>

<script type="text/javascript">
    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer'], function () {
        var layer = parent.layer || layui.layer;
        var form = layui.form;
        paging = layui.paging();
        $("#lineId").bindSelect({
            type: "POST",
            url: "/system/line/getListTreeSelect",
            title: '请选择线体'
        });
        $("#toolbar").authorizeButton();
        $('#btnSearch').click(initGrid);
        $('#keyWord').bindEnterEvent(initGrid);
       // initGrid();

    });
    //$("#lineId").bindChangeEvent(initGrid);
    $("#lineId").on("select2:select", function (e) {
    // 处理选择事件
        if ($("#lineId").val() == "0") {
            return
        };
        initGrid();
    });

    function flush(){
        if( $("#lineId").val() == "0"){
            return
        };
        initGrid();
    }

    function initGrid() {
        paging.init({
            url: '/param/status/index',
            elem: '#content',
            tempElem: '#contentTpl',
            singleSelected: true, //单选
            params: {
                keyWord: $("#keyWord").val(),
                configId: $("#lineId").val(),
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 10,
            },
            success: function () {

            }
        });
    }

   
    function btn_import() {
        $.layerOpen({
            id: "detail",
            title: "导入参数",
            width: "450px",
            height: "250px",
            content: "/param/status/import?configId=" + $("#lineId").val(),
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }
    function btn_export() {
        if ($("#lineId").val() == "0") {
            $.layerMsg("请先选择线体。", "warning");
            return;
        }
        // 发送请求到后端以触发文件导出
        fetch("/param/status/export?configId=" + $("#lineId").val(), {
            method: "GET",
        }).then(response => response.blob())
            .then(blob => {
                // 创建一个临时链接以下载文件
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement("a");
                a.href = url;
                a.download = $("#lineId").val()+ "-status.xlsx"; // 文件名
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
            });
         
    }
</script>
