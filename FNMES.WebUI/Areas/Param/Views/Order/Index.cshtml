@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>工单列表</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/select2/css/select2.css" rel="stylesheet" />
    <!--[if lt IE 9]>
        <script src="/Content/jquery/jquery-1.9.1.min.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
    <script src="~/Content/jquery/jquery.min.js"></script>
    <!--<![endif]-->
    <!--[if lt IE 9]>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/select2/js/select2.min.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
</head>
<body>
    <div class="panel animated fadeIn">
        <div class="panel-body">
            <div class="layui-inline" style="margin-bottom: 10px;">
                <select lay-ignore name="lineId" class="select2" id="lineId"  style="width: 250px;height: 30px;" lay-verify="required"></select>
                <button class="layui-btn layui-btn-primary layui-btn-small" onclick="btn_data()">查看产品</button>
            </div>

            <div id="toolbar" class="FNMES-table-toolbar">
                <div class="layui-btn-group"> </div>
                <div class="layui-btn-group" id="queryDate">
                    <button value="1" class="layui-btn layui-btn-primary layui-btn-small">正序</button>
                    <button value="2" class="layui-btn layui-btn-primary layui-btn-small active">倒序</button>
                    <button value="3" class="layui-btn layui-btn-primary layui-btn-small">只看未完成</button>
                </div>
                
                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small" style="line-height:20px">
                        <i class="layui-icon">&#xe615;</i>
                </button>

                <div class="toolbar-search-input">
                    <input type="text" id="keyWord" placeholder="工单或产品编码" autocomplete="off" class="layui-input" style="height:39px">
                </div>
            </div>
            <table id="gridList" class="layui-form layui-table table-hover FNMES-table" lay-skin="line">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" lay-skin="primary">
                        </th>
                        <th>工单号</th>
                        <th>产品</th>
                        <th>产品备注</th>
                        <th>数量</th>
                        <th>档位</th>
                        <th>计划开始时间</th>
                        <th>计划完成时间</th>
                        <th>状态</th>
                    </tr>
                </thead>
                <!--内容容器-->
                <tbody id="content"></tbody>
            </table>
            <div id="paged"></div>
        </div>
    </div>
</body>
</html>

<!--内容模板-->
<script id="contentTpl" type="text/html">
      {{#  layui.each(d.list, function(index, item){ }}
    <tr>
        <td>
            <input type="checkbox" lay-skin="primary" value="{{item.Id}}"></td>
        <td>{{item.TaskOrderNumber}}</td>
        <td>{{item.ProductPartNo}}</td>
        <td>{{item.ProductDescription}}</td>
        <td>{{item.PlanQty}}</td>
        <td>{{item.PackCellGear}}</td>
        <td>{{item.PlanStartTime}}</td>
        <td>{{item.PlanEndTime}}</td>
        <td>{{item.FlagString}}</td>
    </tr>
      {{#  }); }}
       {{# if(d.list.length<=0) { }}
          <tr style="color: red">
              <td colspan="8">查无数据。</td>
          </tr>
      {{# } }}
</script>

<script type="text/javascript">
    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer'], function () {
        var layer = parent.layer || layui.layer;
        var form = layui.form;
        paging = layui.paging();
        $("#lineId").bindSelect({
            type: "POST",
            url: "/system/line/getListTreeSelect",
            title: '请选择线体'
        });
        $("#toolbar").authorizeButton();
        $('#btnSearch').click(initGrid);
        $('#keyWord').bindEnterEvent(initGrid);
        $("#btn_Pro").click("btn_Pro");
       // initGrid();

    });

    $("#lineId").on("select2:select", function (e) {
    // 处理选择事件
        if ($("#lineId").val() == "0") {
            return
        };
        initGrid();
    });

    function flush(){
        if( $("#lineId").val() == "0"){
            return
        };
        initGrid();
    }

    $('#queryDate').find('button').click(function (i, v) {
        $(this).addClass('active');
        $(this).siblings('button').removeClass('active');
        initGrid();
    });


    function initGrid() {
        if ($("#lineId").val() == "0") {
            return
        };
        paging.init({
            url: '/param/order/index',
            elem: '#content',
            tempElem: '#contentTpl',
            singleSelected: true, //单选
            params: {
                keyWord: $("#keyWord").val(),
                configId: $("#lineId").val(),
                index: $('#queryDate').find('button.active').val()
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 10,
            },
            success: function () {

            }
        });
    }

    function btn_getOrder() {
        $.layerConfirm({
            content: "确定同步工厂工单吗？",
            callback: function () {
                $.formSubmit({
                    url: '/param/order/getOrder',
                    data: {
                        configId: $("#lineId").val()
                    },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }
   

    function btn_start() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选需要一条开工的工单。", "warning");
            return;
        }
        $.layerConfirm({
            content: "您已选中1条数据, 确定开工吗？",
            callback: function () {
                $.formSubmit({
                    url: '/param/order/start',
                    data: { primaryKey: ids[0],
                            configId: $("#lineId").val() },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }

    function btn_pause() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选需要一条暂停的工单。", "warning");
            return;
        }
        $.layerConfirm({
            content: "您已选中1条数据, 确定暂停吗？",
            callback: function () {
                $.formSubmit({
                    url: '/param/order/pause',
                    data: {
                        primaryKey: ids[0],
                        configId: $("#lineId").val()
                    },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }


    function btn_cancel() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选需要一条取消的工单。", "warning");
            return;
        }
        $.layerConfirm({
            content: "您已选中1条数据, 确定取消吗？",
            callback: function () {
                $.formSubmit({
                    url: '/param/order/cancel',
                    data: {
                        primaryKey: ids[0],
                        configId: $("#lineId").val()
                    },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }

    function btn_detail() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        $.layerOpen({
            id: "detail",
            title: "查看工单",
            width: "730px",
            height: "400px",
            content: "/param/order/detail?primaryKey=" + ids[0] + "&configId=" + $("#lineId").val(),
            btn: null
        });
    }

    function btn_data() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        $.layerOpen({
            id: "data",
            title: "查看产品",
            width: "1200px",
            height: "800px",
            content: "/param/order/data?primaryKey=" + ids[0] + "&configId=" + $("#lineId").val(),
            btn: null
        });
    }

    function btn_getRecipe() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选一条需要同步配方的产品。", "warning");
            return;
        }
        $.layerConfirm({
            content: "您已选中1个产品, 确定同步工艺配方吗？",
            callback: function () {
                $.formSubmit({
                    url: '/param/order/getRecipe',
                    data: {
                        primaryKey: ids[0],
                        configId: $("#lineId").val(),
                        force: false
                    },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }
</script>
