@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <meta charset="utf-8">
    <link rel="shortcut icon" type="image/ico" href="~/favicon.ico" />
    <link rel="bookmark" type="image/ico" href="~/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/select2/css/select2.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!--[if lt IE 9]>
        <script src="/Content/jquery/jquery-1.9.1.min.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
    <script src="~/Content/jquery/jquery.min.js"></script>
    <!--<![endif]-->
    <!--[if lt IE 9]>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/select2/js/select2.min.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
    <style>
        /* 添加自定义样式以支持自动换行 */
        .auto-wrap {
            resize: none; /* 禁止调整大小 */
            overflow: auto; /* 显示滚动条 */
            white-space: pre-wrap; /* 关键属性: 自动换行 */
            word-wrap: break-word; /* 允许单词折行 */
            width: 400px;
            height:200px;
        }
    </style>
</head>



<body>
    <form id="form" class="layui-form" style="margin-top: 25px">
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label label-required">产品条码</label>
                <div class="layui-input-inline">
                    <input type="hidden" name="primaryKey" id="primaryKey"/>
                    <input type="hidden" name="configId" id="configId" />
                    <input type="hidden" name="callTime" id="callTime" />
                    <input type="text" name="productCode" id="productCode" autocomplete="off" class="layui-input" disabled />
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label label-required">工位号</label>
                <div class="layui-input-block">
                    <input type="text" name="stationCode" label-required="required" id="stationCode" autocomplete="off" class="layui-input" />
                </div>
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label label-required">不良代码</label>
                <div class="layui-input-block">
                    <input type="hidden" name="defectCode" id="defectCode" / >
                    <button class="layui-btn layui-btn-primary demo-dropdown-base">
                        <span>不良代码</span>
                        <i class="layui-icon layui-icon-down layui-font-12"></i>
                    </button>
                </div>
            </div>

            <div class="layui-inline">
                <label class="layui-form-label label-required">不良描述</label>
                <div class="layui-input-block">
                    <input type="text" name="defectDesc" label-required="required" id="defectDesc" autocomplete="off" class="layui-input" / disabled>
                </div>
            </div>

            <div class="layui-inline">
                <label class="layui-form-label label-required">操作员</label>
                <div class="layui-input-block">
                    <input type="text" name="operatorNo" label-required="required" id="operatorNo" autocomplete="off" class="layui-input" />
                </div>
            </div>
        </div>

        <div class="layui-form-item" style="display: none">
            <div class="layui-input-block">
                <button id="btnSubmit" class="layui-btn" lay-submit lay-filter="add">提交</button>
            </div>
        </div>
    </form>

    @* 1、SXMS-027：气密不良
    2、SXMS-021：尺寸不良
    3、SXMS-001：破损/变形/压划伤 *@

    <script>
        layui.use(['element', 'form', 'laydate','dropdown'], function () {
            var form = layui.form;
            var element = layui.element;
            var laydate = layui.laydate;
            var dropdown = layui.dropdown;

            dropdown.render({
                elem: '.demo-dropdown-base', // 绑定元素选择器，此处指向 class 可同时绑定多个元素
                data: [{
                    title: 'SXMS-027',
                    id: 100
                }, {
                    title: 'SXMS-021',
                    id: 101
                }, {
                    title: 'SXMS-001',
                    id: 102
                }],
                click: function (obj) {
                    this.elem.find('span').text(obj.title);
                    $("#defectCode").val(obj.title);
                    if (obj.title == 'SXMS-027') {
                        $("#defectDesc").val("气密不良")
                    }
                    if (obj.title == 'SXMS-021') {
                        $("#defectDesc").val("尺寸不良")
                    }
                    if (obj.title == 'SXMS-001') {
                        $("#defectDesc").val("破损/变形/压划伤")
                    }
                }
            });

            //获取url参数
            var primaryKey = $.getQueryString("primaryKey");
            var configId = $.getQueryString("configId");
            var productCode = $.getQueryString("productCode");

            $("#primaryKey").val(primaryKey);
            $("#configId").val(configId);
            $("#productCode").val(productCode);

            form.render();

            form.on('submit(add)', function (form) {
                $.formSubmit({
                    url: "/param/order/scrap",
                    data: form.field
                });
                return false;
            });
        });
    </script>
</body>
</html>