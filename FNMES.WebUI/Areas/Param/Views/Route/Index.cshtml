<script type="text/javascript">
    var paging;
    layui.config({ base: parent._baseUrl}).use(['paging', 'form'], function () {
        var form = layui.form;
        paging = layui.paging();
        $("#lineId").bindSelect({
            type: "POST",
            url: "/system/line/getListTreeSelect",
            title: '请选择线体'
        });
        $("#lineId").on("select2:select", function (e) {
            // 处理选择事件
            if ($("#lineId").val() == "0") {
                return
            };
            initTree();
        });
        
        $("#toolbar").authorizeButton();
        $('#btnSearch').click(initGrid);
        $('#keyWord').bindEnterEvent(initGrid);
    });

    function initTree() {
        var setting = {
            data: {
                simpleData: {
                    enable: true
                }
            },
            check: {
                enable: false,
                chkStyle: "checkbox",
                chkDisabledInherit: false
            },
            async: {
                enable: true,
                url: "/param/product/getListTree?configId=" + $("#lineId").val(),
                dataType: "text",
                autoParam: ["id", "name"]
            }, callback: {
                onAsyncSuccess: function (event, treeId, treeNode, msg) {
                    var node = zTreeObj.getNodesByFilter(function (node) {
                        return node.level == 1
                    }, true);
                    zTreeObj.selectNode(node);
                    zTreeObj.setting.callback.onClick(event, zTreeObj.setting.treeId, node);
                },
                onClick: function (event, treeId, treeNode) {
                    initGrid();
                }
            }
        };

        var zTreeObj = $.fn.zTree.init($("#treeItem"), setting);
    }



    function initGrid() {
        if ($("#lineId").val() == "0") {
            return
        };
        var treeObj = $.fn.zTree.getZTreeObj("treeItem");
        var selectedNode = treeObj.getSelectedNodes()[0];
        if (selectedNode.level == 0) {
            return;
        }

        paging.init({
            url: '/param/route/index',
            elem: '#content',
            tempElem: '#contentTpl',
            params: {
                keyWord: $("#keyWord").val(),
                productPartNo: selectedNode.name,
                configId: $("#lineId").val()
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 17,
            },
            success: function () {

            },
            fail: function (msg) {
                top.layer.msg(msg);
            }
        });
    }
 
    function btn_add() {
        var treeObj = $.fn.zTree.getZTreeObj("treeItem");
        var selectedNode = treeObj.getSelectedNodes()[0];
        $.layerOpen({
            id: "add",
            title: "新增工序",
            width: "750px",
            height: "400px",
            content: "/param/route/form?configId=" + $("#lineId").val() + "&productPartNo=" + selectedNode.name,
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_edit() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录修改。", "warning");
            return;
        }
        $.layerOpen({
            id: "edit",
            title: "修改工序",
            width: "750px",
            height: "400px",
            content: "/param/route/form?primaryKey=" + ids[0] + "&configId=" + $("#lineId").val(),
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_delete() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选需要一条删除的工序。", "warning");
            return;
        }
        $.layerConfirm({
            content: "您已选中1条数据, 确定删除吗？",
            callback: function () {
                $.formSubmit({
                    url: '/param/route/delete',
                    data: {
                        primaryId: ids[0],
                        configId: $("#lineId").val()
                    },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }

    function btn_detail() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        $.layerOpen({
            id: "detail",
            title: "查看工站",
            width: "670px",
            height: "530px",
            content: "/param/unitProcedure/detail?primaryKey=" + ids[0] + "&configId=" + $("#lineId").val(),
            btn: null
        });
    }

    function btn_refresh() {
        if ($("#lineId").val() == "0") {
            return
        };
        var treeObj = $.fn.zTree.getZTreeObj("treeItem");
        var selectedNode = treeObj.getSelectedNodes()[0];

        $.ajax({
            url: "/param/route/getExistStation",
            data: {
                productPartNo: selectedNode.name,
                configId: $("#lineId").val()
            },
            type: "post",
            dataType: "json",
            async: false,
            success: function (data) {
                initGrid();
            }
        });
    }
</script>

