@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>产品列表</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/select2/css/select2.css" rel="stylesheet" />
    <!--[if lt IE 9]>
        <script src="/Content/jquery/jquery-1.9.1.min.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
    <script src="~/Content/jquery/jquery.min.js"></script>
    <!--<![endif]-->
    <!--[if lt IE 9]>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/select2/js/select2.min.js"></script>
    <script src="~/Content/framework/js/global.js"></script>

    <style>
        .container {
            width: 100%;
            overflow: auto;
        }

        .div-test {
            overflow-x: auto;
            overflow-y: auto;
            height: 100%;
            width: 100%;
        }

            .div-test::-webkit-scrollbar {
                width: 12px;
                /* 设置竖向滚动条的宽度 */
                height: 12px;
                /* 设置横向滚动条的高度 */
            }

            .div-test::-webkit-scrollbar-thumb {
                background-color: #888;
                /* 滚动条的颜色 */
                border-radius: 10px;
                /* 滚动条的圆角 */
            }

                .div-test::-webkit-scrollbar-thumb:hover {
                    background-color: #555;
                    /* 滚动条悬停时的颜色 */
                }

            .div-test::-webkit-scrollbar-track {
                background: #f1f1f1;
                /* 滚动条轨道的颜色 */
                border-radius: 10px;
                /* 轨道的圆角 */
            }

        table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            white-space: nowrap;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        td {
            overflow: hidden;
            text-overflow: ellipsis;
            word-wrap: break-word;
            max-width: 200px;
        }
    </style>

</head>
<body>
    <div class="panel animated fadeIn">
        <div class="panel-body div-test">
            <div class="layui-inline" style="margin-bottom: 10px;">
                <select lay-ignore name="lineId" class="select2" id="lineId"  style="width: 250px;height: 30px;" lay-verify="required"></select>
                <div class="layui-btn-group">
                    <button class="layui-btn layui-btn-primary layui-btn-small" onclick="btn_add()">增加</button>
                    <button class="layui-btn layui-btn-primary layui-btn-small" onclick="btn_delete()">删除</button>
                    <button class="layui-btn layui-btn-primary layui-btn-small" onclick="btn_modify()">修改</button>
                </div>
             </div>

            <div id="toolbar" class="FNMES-table-toolbar">
                <div class="layui-btn-group">
                   
                </div>
                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small" style="line-height:20px">
                    <i class="layui-icon">&#xe615;</i>
                </button>
                <div class="toolbar-search-input">
                    <input type="text" id="keyWord" placeholder="产品编码或姓名" autocomplete="off" class="layui-input" style="height:39px">
                </div>
            </div>

            <table id="gridList"  lay-skin="line">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" lay-skin="primary">
                        </th>
                        <th>编码</th>
                        <th>名称</th>
                        <th>客户项目号</th>
                        <th>Bom</th>
                        <th>Bom名称</th>
                        <th>Bom版本</th>
                        <th>工艺名称</th>
                        <th>路线编码</th>
                        <th>路线名称</th>
                        <th>路线版本</th>
                        <th>时间</th>
                    </tr>
                </thead>
                <!--内容容器-->
                <tbody id="content"></tbody>
            </table>
            <div id="paged"></div>
        </div>
    </div>
</body>
</html>

<!--内容模板-->
<script id="contentTpl" type="text/html">
      {{#  layui.each(d.list, function(index, item){ }}
    <tr>
        <td>
            <input type="checkbox" lay-skin="primary" value="{{item.Id}}"></td>
          <td>{{item.ProductPartNo}}</td>
        <td>{{item.ProductDescription}}</td>
        <td>{{item.SapCustomerProjNo}}</td>
        <td>{{item.BomNo}}</td>
        <td>{{item.BomDescription}}</td>
        <td>{{item.BomVersion}}</td>
        <td>{{item.ProcessConfigName}}</td>
        <td>{{item.RouteNo}}</td>
        <td>{{item.RouteName}}</td>
        <td>{{item.RouteVersion}}</td>
        <td>{{item.CreateTime}}</td>
       
    </tr>
      {{#  }); }}
       {{# if(d.list.length<=0) { }}
          <tr style="color: red">
              <td colspan="12">查无数据。</td>
          </tr>
      {{# } }}
</script>

<script type="text/javascript">
    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer'], function () {
        var layer = parent.layer || layui.layer;
        var form = layui.form;
        paging = layui.paging();
        $("#lineId").bindSelect({
            type: "POST",
            url: "/system/line/getListTreeSelect",
            title: '请选择线体'
        });
        $("#toolbar").authorizeButton();
        $('#btnSearch').click(initGrid);
        $('#keyWord').bindEnterEvent(initGrid);
       // initGrid();

    });
    //$("#lineId").bindChangeEvent(initGrid);
    $("#lineId").on("select2:select", function (e) {
    // 处理选择事件
        if ($("#lineId").val() == "0") {
            return
        };
        initGrid();
    });

    function flush(){
        if( $("#lineId").val() == "0"){
            return
        };
        initGrid();
    }

    function initGrid() {
        if ($("#lineId").val() == "0") {
            return
        };
        paging.init({
            url: '/param/product/index',
            elem: '#content',
            tempElem: '#contentTpl',
            singleSelected: true, //单选
            params: {
                keyWord: $("#keyWord").val(),
                configId: $("#lineId").val()
                
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 10,
            },
            success: function () {

            }
        });
    }

    function btn_getRecipe() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选一条需要同步配方的产品。", "warning");
            return;
        }
        $.layerConfirm({
            content: "您已选中1个产品, 确定同步工艺配方吗？",
            callback: function () {
                
                $.formSubmit({
                    url: '/param/product/getRecipe',
                    data: { primaryKey: ids[0],
                            configId: $("#lineId").val(),
                            force: true
                    },
                    success: function () {
                        initGrid();
                    }
                });
               
            }
        });
    }

    function btn_add() {
        if ($("#lineId").val() == "0") {
            return
        };
        $.layerOpen({
            id: "add",
            title: "添加配方",
            width: "730px",
            height: "400px",
            content: "/param/product/add?ConfigId=" + $("#lineId").val(),
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_modify() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录查看。", "warning");
            return;
        }
        $.layerOpen({
            id: "modify",
            title: "修改配方",
            width: "730px",
            height: "400px",
            content: "/param/product/modify?primaryKey=" + ids[0] + "&configId=" + $("#lineId").val(),
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_delete() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length != 1) {
            $.layerMsg("请勾选单条记录。", "warning");
            return;
        }
        if ($("#lineId").val() == "0") {
            return
        };
        $.layerConfirm({
            content: "您已选中1条数据, 确定删除吗？",
            callback: function () {
                $.formSubmit({
                    url: '/param/product/delete',
                    data: {
                        primaryKey: ids[0],
                        ConfigId: $("#lineId").val()
                    },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }

    
</script>
